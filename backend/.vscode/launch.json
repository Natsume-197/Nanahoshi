{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run in Development Mode",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["run", "dev"],
			"console": "integratedTerminal"
