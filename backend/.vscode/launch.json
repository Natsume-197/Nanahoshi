		{
			"name": "Run in Production Mode",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["run", "start"],
			"console": "integratedTerminal",
			"preLaunchTask": "bun: build"
		}
	]
}
