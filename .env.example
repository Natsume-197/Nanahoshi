# Nanahoshi Application Configuration
NANAHOSHI_VERSION_TAG=latest                       # Nanahoshi application version tag

# Container user and group configuration (used for file permission mapping)
NANAHOSHI_UID=1000                                 # Default user ID
NANAHOSHI_GID=1000                                 # Default group ID

# Timezone configuration
TIMEZONE=Etc/UTC                                   # Timezone

# MariaDB database configuration
SUPABASE_DB_ROOT_PASSWORD=super_secure_password    # Root password for Supabase Database
SUPABASE_DB_NAME=nanahoshi                         # Name of the main database
SUPABASE_DB_USER=nanahoshi                         # Database username
SUPABASE_DB_PASSWORD=your_secure_password          # Database user password

# Filesystem paths for persistent storage
NANAHOSHI_DATA_PATH=/path/to/nanahoshi/data         # Path to app data (e.g., /home/user/nanahoshi/data)
NANAHOSHI_BOOKS_PATH=/path/to/nanahoshi/books       # Path to book files (e.g., /home/user/nanahoshi/books)